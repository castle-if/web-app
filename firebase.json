{
  "database": {
    "rules": "database-rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "database-rules.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "public/**/*.@(js|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}
